{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "dnsimple",
  "title": "DNSimple",
  "description": "View your DNSimple domains",
  "icon": "command-icon.png",
  "author": "mlafeldt",
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Search Domains",
      "description": "Search your domains",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "accessToken",
      "type": "password",
      "required": true,
      "title": "Access Token",
      "description": "Your DNSimple user access token",
      "placeholder": "Enter your access token"
    },
    {
      "name": "accountId",
      "type": "textfield",
      "required": true,
      "title": "Account ID",
      "description": "Your DNSimple account ID",
      "placeholder": "Enter your account ID"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.45.2",
    "date-fns": "^2.29.3",
    "dnsimple": "^6.1.0"
  },
  "devDependencies": {
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
